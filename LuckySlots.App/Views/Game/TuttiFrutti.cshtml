
@{
    ViewData["Title"] = "TuttiFrutti";
}

<div class="container">
    <div class="row">
        <div class="col-md-9">
            <div class="card text-white bg-dark">
                <div class="card-header">
                    Tutti Frutti
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <div class="alert alert-danger" id="invalid-stake-alert">
                                <button type="button" class="close" data-dismiss="alert">×</button>
                                Please enter a valid stake.
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8">
                            <canvas style="background-color: #343a40"></canvas>
                        </div>
                        <div class="col-md-4">
                            <form id="spin-form" asp-controller="Game" asp-action="GetGame" method="post">
                                <div class="row">
                                    <label for="stake-input">Stake: </label>
                                    <input id="stake-input" type="text" class="form-control" value="10" />
                                    <button id="spin-button" class="btn btn-warning form-control">Spin</button>
                                </div>
                            </form>
                            <div class="row">
                                @*<h5>You win: </h5>
                                    <h5 id="amount-won"></h5>*@
                                <h5>You win: <span id="amount-won"></span></h5>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/game.js"></script>
}