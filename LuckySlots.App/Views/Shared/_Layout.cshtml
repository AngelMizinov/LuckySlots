<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LuckySlots.App</title>

    <!-- Fonts and icons -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">

    @*<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">*@

    <!-- Theme CSS Files -->
    <link href="~/lib/theme/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/theme/css/paper-dashboard.css?v=2.0.0" rel="stylesheet" />
    <link href="~/css/mdb.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />

    <!-- Font Awesome style -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">

    <!-- Kendo styles -->
    <link href="~/lib/kendo-ui/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="~/lib/kendo-ui/styles/kendo.black.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" />


    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="dist/jquery.payform.js"></script>
    <script src="~/lib/kendo-ui/js/jquery.min.js"></script>

    <!-- Kendo scripts -->
    <script src="~/lib/kendo-ui/js/kendo.web.min.js"></script>
    <script src="~/lib/kendo-ui/js/kendo.aspnetmvc.min.js"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>

</head>
<body class="">
    <div class="wrapper ">
        <div class="sidebar" data-color="black" data-active-color="warning">
            <div class="logo">
                <a href="#" class="simple-text logo-mini">
                    <div class="logo-image-small">
                        <img src="~/lib/theme/img/lucky-slots-logo.png">
                    </div>
                </a>
                <a href="#" class="simple-text logo-normal">
                    LuckySlots
                </a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li class="active">
                        <a asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="nc-icon nc-bank"></i>
                            <p>Home</p>
                        </a>
                    </li>
                    @if (User.Identity.IsAuthenticated && User.IsInRole(GlobalConstants.AdministratorRoleName) == false)
                    {
                        <li class="menu-spa-button">
                            <a id="profile-page" href="#" data-url="/profile/info">
                                <i class="nc-icon nc-single-02"></i>
                                <p>Profile</p>
                            </a>
                        </li>
                    }

                    @if (User.IsInRole(GlobalConstants.AdministratorRoleName))
                    {
                        <li id="transaction-id" class="menu-spa-button">
                            <a href="#" data-url="/transactions/transactions">
                                <i class="nc-icon nc-credit-card"></i>
                                <p>Transactions</p>
                            </a>
                        </li>
                        <li id="all-users-id" class="menu-spa-button">
                            <a href="#" data-url="/admin/users/all">
                                <i class="fas fa-users-cog"></i>
                                <p>Users</p>
                            </a>
                        </li>
                        @*<li>
                            <a id="profile-button" href="#" data-url="/profile/info">
                                <i class="nc-icon nc-single-02"></i>
                                <p>Profile</p>
                            </a>
                        </li>*@
                    }
                    <li class="menu-spa-button">
                        <a href="#" data-url="/home/about" >
                            <i class="nc-icon nc-compass-05"></i>
                            <p>About</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-absolute fixed-top navbar-transparent">
                <div class="container-fluid">
                    <div class="navbar-wrapper">
                        <div class="navbar-toggle">
                            <button type="button" class="navbar-toggler">
                                <span class="navbar-toggler-bar bar1"></span>
                                <span class="navbar-toggler-bar bar2"></span>
                                <span class="navbar-toggler-bar bar3"></span>
                            </button>
                        </div>

                    </div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                        <span class="navbar-toggler-bar navbar-kebab"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end" id="navigation">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link btn-rotate" href="#pablo">
                                    <i class="nc-icon nc-settings-gear-65"></i>
                                    <p>
                                        <span class="d-lg-none d-md-block">Account</span>
                                    </p>
                                </a>
                            </li>
                        </ul>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>
            <!-- End Navbar -->
            <partial name="_CookieConsentPartial" />

            <div class="content">
                @RenderBody()
            </div>
            <footer class="footer footer-black footer-white ">
                <div class="container-fluid">
                    <div class="row">
                        <div class="credits ml-auto">
                            <span class="copyright">
                                ©
                                <script>
                                    document.write(new Date().getFullYear())
                                </script>, made with <i class="fa fa-heart heart"></i> by Telerik Academy Ninjas!
                            </span>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

    <script src="~/js/mdb.min.js"></script>

    <script src="~/lib/theme/js/plugins/perfect-scrollbar.jquery.min.js"></script>

    <!-- Chart JS -->
    <script src="~/lib/theme/js/plugins/chartjs.min.js"></script>
    <!-- Notifications Plugin -->
    <script src="~/theme/js/plugins/bootstrap-notify.js"></script>
    <!-- Control Center for Now Ui Dashboard: parallax effects, scripts for the example pages etc -->
    <script src="~/lib/theme/js/paper-dashboard.min.js?v=2.0.0" type="text/javascript"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.payment/1.0.1/jquery.payment.min.js"></script>

    <!-- at the end of BODY -->
    <!-- CSS is included via this JavaScript file -->
    <script src="~/lib/jquery/card/jquery.card.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.payform.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.menu-spa-button').on('click', function () {
                $('.active').toggleClass('active')
                $(this).toggleClass('active')

                const url = $(this).find('a').data('url');
                console.log($(this).find('a').data('url'));

                $.get(url, function (data) {
                    $('.content').html(data)
                })
            })
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>