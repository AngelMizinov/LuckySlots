@model ValidationModalViewModel

@{
    ViewData["Title"] = "ValidationModal";
}

<!-- Modal -->
<div class="modal fade" id="homeModal" data-toggle="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered" @*role="document" *@>
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Please enter date of birth</h2>
            </div>
            <div class="modal-body">


                <form id="modal-form" asp-controller="Home" asp-action="Index" method="post" class="form-inline justify-content-center">

                    <div>
                        <div class="form-group">
                            @Html.Kendo().DatePicker().Name("DateOfBirth").HtmlAttributes(new { @class = "form-control bg-dark text-warning", style = "width: 100%;" })
                            <span asp-validation-for="@Model.DateOfBirth"></span>                        
                        </div>
                    </div>
                    <div class="container">
                        
                        @if (TempData["Permission"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @TempData["Permission"]
                            </div>
                        }
                    </div>

                    <div class="row">
                        <button type="submit" class="btn btn-primary btn-lg">Continue</button>
                    </div>

                </form>

            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>



