@model ValidationModalViewModel

@{
    ViewData["Title"] = "Home Page";
}

@if (!User.Identity.IsAuthenticated)
{
    if (ViewBag.IsCalledFirstTime)
    {
        <partial name="_ValidationModal" model="@Model" />
    }

    if (!ViewBag.IsValid)
    {
        <partial name="_ValidationModal" model="@Model" />
    }
}

