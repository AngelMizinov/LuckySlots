@model CreditCardViewModel

<!-- Modal -->
<div class="modal fade" id="add-card-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Add New Card</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="card-input-form" asp-controller="Account" asp-action="AddCreditCard" method="post">
                    <div class="row">
                        <div class="col-4">
                            <div class="row">
                                <div class="col-md-8 pr-1">
                                    <div class="form-group">
                                        <label asp-for="@Model.Number" class="control-label">Number</label>
                                        <input asp-for="@Model.Number" id="card-number-input" class="cc-number form-control" minlength="19" maxlength="19" placeholder="---- ---- ---- ----" />
                                        <span asp-validation-for="@Model.Number" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-8 pr-1">
                                    <div class="form-group">
                                        <label asp-for="@Model.CVV" class="control-label">CVV</label>
                                        <input asp-for="@Model.CVV" id="card-cvv-input" maxlength="4" type="tel" placeholder="----" class="cc-cvv form-control" />
                                        <span asp-validation-for="@Model.CVV" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-8 pr-1">
                                    <div class="form-group">
                                        <label asp-for="@Model.Expiry" class="control-label">Expiry</label>
                                        <input asp-for="@Model.Expiry" id="card-expiry-input" class="cc-expires form-control" type="text" pattern="\d*" required minlength="9" maxlength="9" placeholder="MM / YYYY" />
                                        <span asp-validation-for="@Model.Expiry" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-8">
                            <div class='card-wrapper'></div>
                        </div>
                    </div>

                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button id="add-card-button" type="submit" class="btn btn-primary">ADD</button>
                </form>
            </div>
            <div class="modal-footer">

            </div>
        </div>
    </div>
</div>

