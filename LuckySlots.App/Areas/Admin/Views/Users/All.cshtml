@model IEnumerable<UserListViewModel>

@{
    ViewData["Title"] = "All";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>
                    @user.FirstName
                </td>
                <td>
                    @user.LastName
                </td>
                <td>
                    @user.Email
                </td>
            </tr>
        }
    </tbody>
</table>