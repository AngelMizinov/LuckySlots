@model IEnumerable<GameStats>
@{
    ViewData["Title"] = "Dashboard";
}

<h2>Dashboard</h2>

<div class="demo-section k-content wide">
    <div id="chart" style="background: center no-repeat url('~/images/world-map.png');"></div>
</div>

<hr />

<h2>Game stats</h2>
<p>Statistics borken down by game. Currency amounts are shown in US dollars.</p>

<table class="table table-striped table-hover table-dark text-white">
    <thead class="text-warning">
        <tr>
            <td></td>
            <td>Games played</td>
            <td>Amount Staked</td>
            <td>Amount Paid-out</td>
            <td>Profit/Loss</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var gameStat in Model)
        {
            <tr>
                <td>@gameStat.Name</td>
                <td id="@(gameStat.Name + 1)">@gameStat.GamesPlayed</td>
                <td>@gameStat.AmountStaked</td>
                <td>@gameStat.AmountPaidOut</td>
                <td>@(gameStat.AmountStaked - gameStat.AmountPaidOut)</td>
            </tr>
        }
    </tbody>
</table>

<script src="~/js/popularChart.js"></script>